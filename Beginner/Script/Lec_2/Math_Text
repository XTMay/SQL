-- ğŸ”¢ æ•°å­¦å‡½æ•°
-- ROUND(x) 	
-- e.g.: ROUND(88.678) â†’ 89 	 å››èˆäº”å…¥
SELECT gpa, ROUND(gpa) AS round_gpa
FROM students AS st;

-- ABS(x) 	 
-- e.g.: ABS(-10) â†’ 10 	 ç»å¯¹å€¼
SELECT ABS(-3.14) AS abs;

-- CEIL(x) / FLOOR(x)
-- e.g.: CEIL(3.4) â†’ 4 / FLOOR(3.4) â†’ 3 	 å‘ä¸Š / å‘ä¸‹å–æ•´

SELECT gpa, ROUND(gpa), CEIL(gpa), FLOOR(gpa)
FROM students;

-- 3.0
SELECT CEIL(3.000000000001); -- FLoat -> DB/SEVER size = (8 , 16)


-- POWER(x, y) 	 
-- e.g.: POWER(2, 3) â†’ 8 	 x çš„ y æ¬¡å¹‚
SELECT POWER(2, 4)
FROM students;

-- SQRT(x) 	 
-- e.g.: SQRT(9) â†’ 3 	 å¹³æ–¹æ ¹

SELECT SQRT(64)
FROM students;

-- RANDOM() 	 
-- e.g.: RANDOM() â†’ éšæœºæ•´æ•° 	 ç”Ÿæˆéšæœºå€¼

SELECT RANDOM()
FROM students;

-- ğŸ”  å­—ç¬¦ä¸²å‡½æ•° 	 

-- LENGTH(s) 	 
-- e.g.: LENGTH('SQL') â†’ 3 	 å­—ç¬¦ä¸²é•¿åº¦
SELECT LENGTH('ã“ã‚“Qã«ã¡ã¯Sæ‚¨å¥½L')
FROM students;

-- UPPER(s) / LOWER(s) 	 
-- e.g.: UPPER('sql') â†’ 'SQL' 	 è½¬æ¢ä¸ºå¤§å†™ / å°å†™
SELECT name, UPPER(name)
FROM students;


SELECT *
FROM students;
-- SUBSTR(s, start, len) 	 
-- e.g.: SUBSTR('SQLè¯­è¨€', 1, 3) â†’ 'SQL' 	 æˆªå–å­ä¸²
SELECT name, SUBSTR(name, 2, 2)
FROM students;

-- TRIM(s) / LTRIM() / RTRIM() 	 
-- e.g.: TRIM(' abc ') â†’ 'abc' 	 å»é™¤ç©ºæ ¼/å‰å¯¼/å°¾éƒ¨å­—ç¬¦
SELECT name, TRIM(name), LTRIM(name), RTRIM(name)
FROM students;


-- REPLACE(s, old, new) 	 
-- e.g.: REPLACE('apple', 'a', 'A') â†’ 'Apple' 	 æ›¿æ¢å­ä¸²
SELECT name, REPLACE(name, 'å°', 'å¤§')
FROM students;

-- INSTR(s, substr) 	 
-- e.g.: INSTR('hello', 'e') â†’ 2 	 æŸ¥æ‰¾å­ä¸²ä½ç½®*/
SELECT name, INSTR(name, 'z') AS instr
FROM students AS st;



